<mujoco model="acrobat-nofric">
    <!-- Using Runge Kutta 4th order for global optimality -->
    <option integrator="RK4" timestep="0.002"/> 
    <compiler angle="degree" coordinate="local"/>

    <asset>
      <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1="0.8 0.9 1" rgb2="0.7 0.8 0.9"/>
      <material name="mat" texture="grid" texrepeat="6 6" specular="0.3" shininess="0.5"/>
    </asset>

    <default>
        <joint damping="0"/>
        <geom friction="0 0 0"/>
    </default>

    <worldbody>
        <geom name="floor" type="plane" size="50 50 1" material="mat" rgba="0.95 0.95 0.95 1"/>

        <body name="acrobat" pos = "0 0 1.2">
            <body name="link1" pos= "0 0 0">
                <joint name="link1_joint" type="hinge" axis="0 -1 0" limited="false"/>
                <geom name="link1" type="capsule" fromto="0 0 0 0 0 -0.5" size="0.01" mass="0.0000" rgba="0.9 0.2 0.2 0.2"/>
                <body name="point_mass1" pos="0 0 -0.25">
                    <geom name="link1_point_mass" type="sphere" size="0.02" mass="1" rgba="0.1 0.1 0.1 0.8"/>
                </body>

                <body name="link2" pos="0 0 -0.5">
                    <joint name="link2_joint" type="hinge" axis="0 -1 0" limited="false"/>
                    <geom name="link2" type="capsule" fromto="0 0 0 0 0 -0.5" size="0.01" mass="0.0000" rgba="0.9 0.2 0.2 0.2"/>
                    <body name="point_mass2" pos="0 0 -0.25">
                        <geom name="link2_point_mass" type="sphere" size="0.02" mass="1" rgba="0.1 0.1 0.1 0.8"/>
                    </body>
                </body>
            </body>

            

        </body>

    </worldbody>

    <actuator>
        <motor name="torque" joint="link2_joint" gear="0.5" ctrllimited="true" ctrlrange="-10 10"/>
    </actuator>

    <sensor>
        <jointpos name="theta1" joint="link1_joint"/>
        <jointvel name="theta1_dot" joint = "link1_joint"/>
        <jointpos name="theta2" joint="link2_joint"/>
        <jointvel name="theta2_dot" joint="link2_joint"/>
    </sensor>
</mujoco>